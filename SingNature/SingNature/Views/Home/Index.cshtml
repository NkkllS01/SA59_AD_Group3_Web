@model SingNature.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/index.css" asp-append-version="true" />
</head>

<body>

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="auth-container">
    @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
    {
        <span class="welcome-text">Welcome, @HttpContextAccessor.HttpContext.Session.GetString("Username")!</span>
        <button type="button" id="logoutBtn" class="logout-btn">Logout</button>
    }
    else
    {
        <a href="/user/login" class="login-btn">Login</a>
        <a href="/user/register" class="signup-btn">Sign Up</a>
    }
</div>
    <div class="search-info-banner">
        <p class="search-text">Looking for something?</p>

        <div class="search-container">
        <form asp-controller="Search" asp-action="Results" method="get" class="searchSpecie">
            <div class="search-row">
                <input type="text" name="keyword" id="searchSpecie" placeholder="Search for a species..." required />
                <button type="submit">Search</button>
            </div>

            <!-- Second Row: Image Upload and Search by Image Button -->
            <div class="search-row">
                <input type="file" id="imageUpload" name="image" accept="image/*" style="display: none;" />
                <button type="button" id="uploadImageBtn">Upload Image</button>
                <button type="button" id="searchByImageBtn" disabled>Search by Image</button>
            </div>
        </form>
        </div>
        <script src="~/js/search.js"></script>
    </div>

    <!-- Image Preview Section (Placed Outside the Banner) -->
    <div id="imagePreviewContainer" style="display: none; text-align: center; margin-top: 20px;">
        <p>Image uploaded successfully!</p>
        <img id="imagePreview" src="" alt="Uploaded Image" style="max-width: 300px; max-height: 300px; border-radius: 5px;"/>
    </div>

    <!-- Processing Message -->
    <p id="processingMessage" style="display: none; text-align: center; color: green;">Processing image...</p>

    <br>
    <br>
    
    @if (Model.LatestWarning != null)
    {
        @Html.Partial("_AlertBanner", Model.LatestWarning)
    }
    else
    {
     <p>No active warning.</p >
    }

    <div class="text-center"> 
        <h2>Wildlife Sightings</h2>
        <div class="underline"></div>
        <input id="searchBox" placeholder="Search for a place..." type="text" />
        <div id="map"></div>

        <script src="https://unpkg.com/%40googlemaps/markerclusterer/dist/index.min.js"></script>
    </div>

    <script src="~/js/index.js"></script>
    <script src="~/js/maps.js"></script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1QDles42NyhRJbN5WjMbYadWuYzyG5lo&callback=initMap&libraries=places,marker">
    document.getElementById("logoutBtn")?.addEventListener("click", async function () {
        try {
            const response = await fetch("/api/auth/logout", { method: "POST" });

            if (response.ok) {
                alert("Logged out successfully.");
                window.location.href = "/home";
            } else {
                alert("Logout failed.");
            }
        } catch (error) {
            console.error("Logout error:", error);
            alert("Logout failed.");
        }
    });
    </script>

    <div class="css-info">
        <div class="see-all-btn">
            <a href="@Url.Content("~/Views/Sightings/SightingList.cshtml")" class="btn">SEE ALL SIGHTINGS →</a>
            <a href="@Url.Action("Report", "Sightings")" class="btn-report">REPORT NEW SIGHTING →</a>
        </div>
    </div>
    <br>

    <!-- Wildlife Information Section -->
    @Html.Partial("_WildlifeInfo",Model.Categories)

    <!-- Park Information Section -->
    @Html.Partial("_ParkInfo",Model.Parks)

</body>
