@model List<Category>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/index.css" asp-append-version="true" />
</head>

<body>

    <div class="search-info-banner">
        <p class="search-text">Looking for something?</p>
        <form asp-controller="Search" asp-action="Results" method="get" class="searchSpecie">
            <input type="text" name="keyword" id="searchSpecie" placeholder="Search for a species..." required />
            <button type="submit">Search</button>
        </form>
        <script src="~/js/search.js"></script>
    </div>
    <br>
    <br>

    <div class="text-center"> 
        <h2>Wildlife Sightings</h2>
        <div class="underline"></div>
        <input id="searchBox" placeholder="Search for a place..." type="text" />
        <div id="map"></div>

        <script src="https://unpkg.com/%40googlemaps/markerclusterer/dist/index.min.js"></script>
    </div>

    <script src="~/js/maps.js"></script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1QDles42NyhRJbN5WjMbYadWuYzyG5lo&callback=initMap&libraries=places,marker">
    </script>
    <br>

    @Html.Partial("_WildlifeInfo")

</body>

    
