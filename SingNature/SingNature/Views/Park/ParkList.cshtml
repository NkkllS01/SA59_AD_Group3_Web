@model List<SingNature.Models.Park>

@{
    ViewData["Title"] = "Park List";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/index.css" asp-append-version="true" />
</head>

<h2>Park List</h2>

<div class="css-container">
    @foreach (var park in Model)
    {
        <div class="css-card">
            <h3>@park.ParkName</h3>
            <img src=@park.ImageUrl alt="@park.ParkName"/>
            <a href="@Url.Action("ParkDetail","Park", new {parkId = park.ParkId})" class="btn">View Details</a>
        </div>
    }
</div>