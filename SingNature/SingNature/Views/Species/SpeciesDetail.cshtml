@model SingNature.Models.Specie

@{
    ViewData["Title"] = "Species Details";
}

<h2>@Model.SpecieName</h2>

<img src="@ViewData["ImageUrl"]" alt="@Model.SpecieName" class="species-image" onerror="this.src='/images/image_placeholder.jpg';"/>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Highlights:</strong> @Model.Highlights</p>

<div>
    <a href="@Url.Action("SpeciesList", "Species", new { categoryId = Model.CategoryId })" class="btn">Back to List</a>
</div>
