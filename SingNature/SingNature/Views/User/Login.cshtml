@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Illustration</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: #FBE6D9;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .container {
            display: flex;
            max-width: 1200px;
            width: 100%;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .login-form {
            flex: 1;
            padding: 40px;
        }
        .illustration {
            flex: 1;
            background: #FBE6D9;
            padding: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 32px;
        }
        .logo svg {
            width: 32px;
            height: 32px;
            color: #276749;
        }
        .logo-text {
            font-size: 24px;
            font-weight: 600;
            color: #276749;
        }
        h1 {
            color: #276749;
            font-size: 24px;
            margin-bottom: 8px;
        }
        .subtitle {
            color: #666;
            margin-bottom: 32px;
        }
        .form-group {
            margin-bottom: 24px;
        }
        label {
            display: block;
            color: #276749;
            margin-bottom: 8px;
            font-size: 14px;
        }
        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
        }
        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }
        .remember {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .forgot {
            color: #276749;
            text-decoration: none;
        }
        .buttons {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        .btn {
            padding: 12px;
            border-radius: 6px;
            border: none;
            font-weight: 500;
            cursor: pointer;
            text-align: center;
        }
        .btn-login {
            background: #276749;
            color: white;
        }
        .btn-signup {
            background: white;
            color: #276749;
            border: 1px solid #276749;
        }
        .social-login {
            margin-top: 32px;
            text-align: center;
        }
        .social-buttons {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 16px;
        }
        .social-btn {
            color: #666;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-form">
            <div class="logo">
                <svg viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="3" fill="currentColor"/>
                    <circle cx="18" cy="12" r="3" fill="currentColor"/>
                    <circle cx="6" cy="12" r="3" fill="currentColor"/>
                </svg>
                <span class="logo-text">Group3</span>
            </div>
            <h1>Explore Wildlife with Intelligent Recommendations</h1>
            <p class="subtitle">Welcome Back, Please login to your account</p>
            

            <form id="login-form">
                <div class="form-group">
                    <label for="username">UserName</label>
                    <input type="text" id="username" placeholder="Enter your username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Enter your password" required>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-login">Login</button>
                    <button type="button" class="btn btn-signup" onclick="redirectToRegister()">Sign Up</button>
                </div>
            </form>

            <div class="social-login">
                <p>Or, login with</p>
                <div class="social-buttons">
                    <a href="#" class="social-btn">Facebook</a>
                    <a href="#" class="social-btn">LinkedIn</a>
                    <a href="#" class="social-btn">Google</a>
                </div>
            </div>
        </div>
                <div class="illustration">
            <svg viewBox="0 0 400 300" style="width: 100%; max-width: 400px;">
                <!-- Sun -->
                <circle cx="320" cy="60" r="30" fill="#FFD700"/>
                <!-- Mountains -->
                <path d="M0 180 L150 80 L300 180" fill="#276749"/>
                <path d="M150 180 L280 100 L400 180" fill="#276749"/>
                <!-- Lake/Ground -->
                <path d="M0 180 C100 170, 300 170, 400 180 L400 300 L0 300 Z" fill="#4682B4"/>
                <!-- Van -->
                <rect x="100" y="150" width="120" height="60" fill="#276749"/>
                <rect x="140" y="160" width="60" height="30" fill="#FFD700"/>
                <circle cx="130" cy="210" r="15" fill="#4A5568"/>
                <circle cx="190" cy="210" r="15" fill="#4A5568"/>
                <!-- Tree -->
                <path d="M350 180 L380 180 L365 120 Z" fill="#FFD700"/>
                <!-- Clouds -->
                <path d="M320 30 Q330 20 340 30 T360 30" fill="#276749"/>
                <path d="M350 40 Q360 30 370 40 T390 40" fill="#276749"/>
            </svg>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.getElementById("login-form").addEventListener("submit", async function(event) {
            event.preventDefault();
            
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            try {
                const response = await axios.post("https://localhost:5076/api/auth/login", {
                    userName: username,
                    password: password
                });

                if (response.status === 200) {
                    alert("Login successful!");
                    window.location.href = "/profile";
                }
            } catch (error) {
                alert("Invalid username or password.webbbbb");
            }
        });

        function redirectToRegister() {
            window.location.href = "/register";
        }
    </script>
</body>
</html>
